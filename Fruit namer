<body>
<h2>JavaScript Switch Example: Fruit Category</h2>
<p>Select a fruit to find out its category:</p>
<select id="fruitSelect">
  <option value="Apple">Apple</option>
  <option value="Banana">Banana</option>
  <option value="Mango">Mango</option>
  <option value="Strawberry">Strawberry</option>
  <option value="Cherry">Cherry</option>
  <option value="Pineapple">Pineapple</option>
  <option value="Litchi">Litchi</option>
</select>
<button onclick="checkFruit()">Check Category</button>
<p id="result"></p>
<script>
function checkFruit() {
  let fruit = document.getElementById("fruitSelect").value;
  let message;
  let color;
  switch (fruit) {
    case "Apple":
    case "Banana":
    case "Mango":
    case "Pineapple":
      message = "This is a **tropical fruit!**";
      color = "blue";
      break;
    case "Strawberry":
    case "Cherry":
      message = "This is a **berry fruit!**";
      color = "red";
      break;
    default:
      message = "Unknown fruit category!";
      color = "yellow";
  }
  document.getElementById("result").innerHTML = message;
  document.getElementById("result").style.color = color;
}
</script>
